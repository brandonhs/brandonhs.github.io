<nav class="container-fluid">
    <ul>
        {{#with website}}
            <li>
                <a class="contrast" href="{{base_path}}">
                    <strong>{{title}}</strong>
                </a>
            </li>
            {{#each socials}}
                <li><a href="{{this.href}}" target="_blank" class="fa fa-{{this.fa_class}}"></a></li>
            {{/each}}
            <li><a href="#" data-theme-switcher="light" class="fa fa-sun-o"></a></li>
            {{#each pages}}
                <li><a href="{{this.path}}">{{this.name}}</a></li>
            {{/each}}
        {{/with}}

    </ul>
</nav>
<main class="container">
    <section id="content">
        <div id="posts" class="sections">
            <div id="{{name}}">
                <hgroup>
                    <h1>{{title}}</h1>
                    <h2>{{description}}</h2>
                </hgroup>
            <div id="cards">
                {{#each posts}}
                    <div id="{{this.name}}">
                        <article class="card">
                            <div class="container">
                                <hgroup>
                                    <h3>{{this.title}}</h3>
                                    <h5>{{#date}}{{this.date}}{{/date}}</h5>
                                </hgroup>
                                </div>
                                <div class="content">
                                    {{#each this.description}}
                                        {{#markdown}}{{this}}{{/markdown}}
                                    {{/each}}
                                </div>
                        </article>
                    </div>
                {{/each}}
            </div>
        </div>
    </header>
</main>
